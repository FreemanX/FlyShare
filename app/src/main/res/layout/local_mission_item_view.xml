<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#bb000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_mission_name_textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Mission Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#daffffff"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/upload_mission_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="#000c79"
            android:text="Upload"
            android:textColor="#e4ffffff"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#bb000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_mission_desc_textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Local mission description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#daffffff"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/delete_mission_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:allowUndo="false"
            android:background="#ed9a0000"
            android:text="Delete"
            android:textColor="#e4ffffff"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>