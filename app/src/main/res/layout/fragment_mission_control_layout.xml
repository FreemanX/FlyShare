<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--no one is using this layout xml, this is only an template-->

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="330dp"
        android:background="#d61a1a1a"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Follow Me Mission"
            android:textColor="#f3d0d0d0"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_bar_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Progress"
            android:textColor="#f3d0d0d0"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/upload_mission_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:text="Upload"
                    android:textColor="#f3d0d0d0" />

                <LinearLayout
                    android:id="@+id/config_mission_layout"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/start_mission_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:text="Start"
                    android:textColor="#f3d0d0d0" />

                <Button
                    android:id="@+id/pause_mission_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:text="Pause"
                    android:textColor="#f3d0d0d0" />

                <Button
                    android:id="@+id/resume_mission_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:text="Resume"
                    android:textColor="#f3d0d0d0" />

                <LinearLayout
                    android:id="@+id/ongoing_mission_layout"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/stop_mission_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:text="Stop"
                    android:textColor="#f3d0d0d0" />

            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/cancel_mission_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="#000000"
            android:text="Cancel"
            android:textColor="#f3d0d0d0" />


    </LinearLayout>
</FrameLayout>